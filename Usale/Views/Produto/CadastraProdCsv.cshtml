@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/style.css" />
<link rel="stylesheet" href="~/css/master.css" />

<!-- Vendor CSS Files -->
<link href="~/vendor/icofont/icofont.min.css" rel="stylesheet">
<link href="~/vendor/line-awesome/css/line-awesome.min.css" rel="stylesheet">
<link href="~/vendor/aos/aos.css" rel="stylesheet">
<link href="~/vendor/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">


<main id="main">
    <div class="hero-section">

        <div class="wave">
            <svg width="100%" height="355px" viewBox="0 0 1920 355" version="1.1" xmlns="http://www.w3.org/2000/svg"
                 xmlns:xlink="http://www.w3.org/1999/xlink">
                <g id="Page-1" stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
                    <g id="Apple-TV" transform="translate(0.000000, -402.000000)" fill="#FFFFFF">
                        <path d="M0,439.134243 C175.04074,464.89273 327.944386,477.771974 458.710937,477.771974 C654.860765,477.771974 870.645295,442.632362 1205.9828,410.192501 C1429.54114,388.565926 1667.54687,411.092417 1920,477.771974 L1920,757 L1017.15166,757 L0,757 L0,439.134243 Z" id="Path"></path>
                    </g>
                </g>
            </svg>
        </div>

        <div class="container">
            <div class="row align-items-center">
                <div class="col-12 hero-text-image">

                    <div class="bg-light rounded pb-5" style="box-shadow: 1px 5px 10px #808080">
                        <div class="modal-header text-center mt-5 pt-5" style="border: none; margin-top: 100px!important;">
                            <h5 style="font-size: 30px; color: #1b6ec2" class="modal-title w-100">Cadastro de Produtos Por Planilha</h5>
                        </div>

                        @*CARROUSEL*@
                            <div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel">
                                <ol class="carousel-indicators">
                                    <li data-target="#carouselExampleCaptions" data-slide-to="0" class="active"></li>
                                    <li data-target="#carouselExampleCaptions" data-slide-to="1"></li>
                                    <li data-target="#carouselExampleCaptions" data-slide-to="2"></li>
                                </ol>
                                <div class="carousel-inner">
                                    <div class="carousel-item active" style="height: 400px; background: url('https://images.pexels.com/photos/3178818/pexels-photo-3178818.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=650&w=940'); background-position: bottom; background-size: cover;">
                                        <div class="carousel-caption d-none d-md-block" style="background: #138496dd; border-radius: 5px;">
                                            <h5 class="text-light">Online</h5>
                                            <p>Preencha uma planilha de produtos e cadastre automaticamente sua loja online.</p>
                                        </div>
                                    </div>
                                    <div class="carousel-item" style="height: 400px; background: url('https://images.pexels.com/photos/590022/pexels-photo-590022.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=650&w=940'); background-position: bottom; background-size: cover;">
                                        <div class="carousel-caption d-none d-md-block" style="background: #138496dd; border-radius: 5px;">
                                            <h5 class="text-light">Conforto</h5>
                                            <p>Substitua as planilhas de papel por uma dash completa e intuitiva.</p>
                                        </div>
                                    </div>
                                </div>
                                <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
                                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Previous</span>
                                </a>
                                <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
                                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Next</span>
                                </a>
                            </div>


                        <p style="font-size: 16px; color: #1b6ec2; text-align: right; margin-right: 20px; margin-top: 10px;"><strong style="color: #104b87!important;" id="baixa-planilha">Clique aqui</strong> para baixar a planilha de exemplo</p>

                        <form class="ml-5 mr-5">
                            <div class="form-group">
                                <Label for="csv">Planilha</Label><br>
                                <input id="csv" type="file" name="csv" class="form-control" />
                            </div>

                            <button asp-controller="Dashboard" asp-action="Index" class="btn btn-primary w-100">Enviar</button>
                        </form>



                    </div>


                </div>
            </div>
        </div>

    </div>





</main>


<script src="~/js/jquery-3.4.1-COMPLETASSO.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.sticky/1.0.4/jquery.sticky.js"></script>
<script src="~/vendor/sticky/sticky.js" type="text/javascript"></script>
<script src="~/vendor/owlcarousel/owl.carousel.js" type="text/javascript"></script>
<script src="~/vendor/aos/aos.js" type="text/javascript"></script>
<script src="~/vendor/easing/easing.js" type="text/javascript"></script>
<script src="~/js/main.js"></script>
<script src="~/js/jquery-funcoes.js"></script>


<script>

    $(document).ready(function () {

        $("#baixa-planilha").mouseover(function () {
            $(this).css({
                "cursor": "pointer",
                "transition-duration": "250ms"
            });
        });

        $("#baixa-planilha").click(function () {
            /*Realiza o download*/

            $.ajax({
                type: "GET",
                url: "@Url.Action("BaixaPlanilha", "Home")",
                data: {},
                contentType: "text/plain",
                success: function (response) {

                },
            });

        });

    });


</script>

